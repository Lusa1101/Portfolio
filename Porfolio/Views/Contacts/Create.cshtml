@model Porfolio.Models.Contact

@{
    ViewData["Title"] = "Create";
}
<div class="container mt-5">
    <h1 class="text-center mb-4 project-header">Get In Touch</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="contact-card p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Names" class="control-label">Full Name</label>
                        <input asp-for="Names" class="form-control" placeholder="Enter your name..." />
                        <span asp-validation-for="Names" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email..." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <!--
                    <div class="mb-3">
                        <label asp-for="Phone" class="control-label">Phone</label>
                        <input asp-for="Phone" class="form-control" placeholder="+27 78 333 6666" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    -->

                    <div class="mb-3">
                        <label asp-for="Message" class="control-label">Message</label>
                        <textarea asp-for="Message" class="form-control" id="message" rows="5" placeholder="Write your message..."></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-warning w-100">Send Message ✉️</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .contact-card {
        background-color: #222;
        color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(255, 204, 0, 0.2);
    }

    .form-control {
        background-color: #333;
        color: #fff;
        border: 2px solid #ffc107;
    }

        .form-control::placeholder {
            color: #ddd;
        }

    .btn-warning {
        background-color: #ffc107;
        color: #000;
        border: 2px solid #ffc107;
    }

        .btn-warning:hover {
            background-color: #000;
            color: #ffc107;
        }

    h1.text-warning {
        font-size: 2.5rem; /* Increase size for better emphasis */
        font-weight: bold;
        text-transform: uppercase; /* Give it a sleek professional look */
        letter-spacing: 2px; /* Add subtle spacing */
        text-shadow: 2px 2px 5px rgba(255, 204, 0, 0.5); /* Soft glow effect */
    }


    .project-header {
        font-size: 2.8rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: #ffc107; /* Golden yellow */
        text-shadow: 3px 3px 10px rgba(255, 204, 0, 0.5); /* Soft glow effect */
        padding-bottom: 10px;
        border-bottom: 3px solid #ffc107;
        margin-bottom: 20px; /* Adds spacing below each card */
        padding: 20px;
    }
</style>


