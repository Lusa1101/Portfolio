@model IEnumerable<Porfolio.ViewModels.ProjectViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 project-header">My Projects</h1>
    <div class="row g-4">
        @foreach (var projectVM in Model)
        {
            <div class="col-md-6">
                <div class="project-card p-4">

                    <!-- Image Slider -->
                    @if(@projectVM.ProjectImages.Any())
                    {
                        <div id="carousel-@projectVM.ProjectInstance.Id" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner h-auto">
                                @foreach (var image in projectVM.ProjectImages)
                                {
                                    <div class="carousel-item @(image == projectVM.ProjectImages.First() ? "active" : "")">
                                        <img src="@image.File" class="d-block w-100" onclick="showFullView('@image.File')">
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@projectVM.ProjectInstance.Id" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carousel-@projectVM.ProjectInstance.Id" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        </div>
                        <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-xl">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body text-center">
                                        <img id="modalImage" src="" class="img-fluid" height="100">
                                    </div>
                                </div>
                            </div>
                        </div>

                    }

                    <!-- Project Details -->
                    <div class="mt-3 row g-4">
                        <h5>@projectVM.ProjectInstance.Name</h5>

                        <!-- Collapsible Project Description -->
                        <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#desc-@projectVM.ProjectInstance.Id">
                            View Description
                        </button>
                        <div id="desc-@projectVM.ProjectInstance.Id" class="collapse mt-2">
                            <p class="card-text">@projectVM.ProjectInstance.Description</p>
                        </div>

                        <div class="d-flex flex-wrap">
                            @foreach (var tech in projectVM.ProjectInstance.TechnologyStack.Split(", ").ToList())
                            {
                                <span class="badge bg-info me-1">@tech</span>
                            }
                        </div>

                        <!-- GitHub Link -->
                        @if (projectVM.ProjectInstance.GithubUrl is not null)
                        {
                            <div class="mt-3">
                                <a href="@projectVM.ProjectInstance.GithubUrl" target="_blank" class="btn btn-warning btn-sm w-100">
                                    <i class="bi bi-github"></i> View on GitHub
                                </a>
                            </div>
                        }
                    </div>

                </div>
            </div>
        }
    </div>
</div>
<style>
    .project-card {
        background-color: #222;
        color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(255, 204, 0, 0.2);
    }

    .carousel-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 5px;
    }

    .badge {
        font-size: 0.9rem;
        padding: 8px;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #000;
        border: 2px solid #ffc107;
    }

        .btn-warning:hover {
            background-color: #000;
            color: #ffc107;
        }

    .project-header {
        font-size: 2.8rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: #ffc107; /* Golden yellow */
        text-shadow: 3px 3px 10px rgba(255, 204, 0, 0.5); /* Soft glow effect */
        padding-bottom: 10px;
        border-bottom: 3px solid #ffc107;
        margin-bottom: 20px; /* Adds spacing below each card */
        padding: 20px;
    }

</style>
<script>
    function showFullView(imageSrc) {
        document.getElementById("modalImage").src = imageSrc;
        new bootstrap.Modal(document.getElementById('imageModal')).show();
    }
</script>

